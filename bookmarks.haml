!!!
%html
  %head
    %meta{charset: "utf-8"}
    %title Bookmarks
    :css
      li {
        line-height: 1.4;
      }
      li + li {
        margin-top: 1rem;
      }
      a {
        text-decoration: none;
        color: #00E;
      }
      a:hover:after {
        content: ' ' attr(title);
        color: #555;
      }
      span {
        color: #555;
        font-size: 0.8rem;
      }
  %body
    %h1= "#{bookmarks.length} Bookmarks"

    %ul
      -bookmarks.each do |bookmark|
        %li
          -if bookmark["comment"]
            %a{href: bookmark["url"], title: bookmark["comment"]}<
              = bookmark["title"]
          -else
            %a{href: bookmark["url"]}<
              = bookmark["title"]
          %br
          %span= "#{bookmark["pretty_date"]} Â· #{bookmark["tag_list"]}"

